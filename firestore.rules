rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección 'contact'
    match /contact/{document} {
      allow read, write: if request.auth != null; // Solo usuarios autenticados pueden leer/escribir
    }

    // Reglas para la colección 'products'
    match /products/{productId} {
      allow read: if true;   // Permitir lectura pública
      allow write: if false; // Restringir escritura
    }
  }
}
